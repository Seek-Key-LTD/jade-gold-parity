{
  "title": "{{ .Site.Title }}",
  "description": "{{ .Site.Params.description }}",
  "baseURL": "{{ .Site.BaseURL }}",
  "language": "{{ .Site.LanguageCode }}",
  "sections": [
    {{ range $i, $section := .Site.Sections }}
    {{ if $i }},{{ end }}
    {
      "title": "{{ $section.Title }}",
      "path": "{{ $section.RelPermalink }}",
      "pages": {{ len $section.Pages }}
    }
    {{ end }}
  ],
  "pages": [
    {{ range $i, $page := .Site.RegularPages }}
    {{ if $i }},{{ end }}
    {
      "title": "{{ $page.Title }}",
      "path": "{{ $page.RelPermalink }}",
      "date": "{{ $page.Date.Format "2006-01-02T15:04:05Z07:00" }}",
      "description": "{{ $page.Description }}",
      "categories": [
        {{ range $j, $category := $page.Params.categories }}
        {{ if $j }},{{ end }}"{{ $category }}"
        {{ end }}
      ],
      "tags": [
        {{ range $j, $tag := $page.Params.tags }}
        {{ if $j }},{{ end }}"{{ $tag }}"
        {{ end }}
      ]
    }
    {{ end }}
  ]
}